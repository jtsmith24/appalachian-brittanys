---
import { Image } from "astro:assets";

export interface Props {
    title: string;
    image: ImageMetadata;
    description?: string;
}

const { title, image, description } = Astro.props;
---

<div class="flex flex-col bg-accent min-w-lg rounded overflow-hidden shadow-lg text-primary">
  <Image src={image} alt={description ?? ""} />
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{title}</div>
    <p>
      <slot />
    </p>
  </div>
  <div class="px-6 pt-4 pb-2 w-fit ml-auto mt-auto">
    <a class="btn-secondary" href="">Pedigree</a>
  </div>
</div>